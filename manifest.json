{
  "manifest_version": 2,
  "name": "Page Title Displayer",
  "version": "1.0",
  "description": "Displays the current page's title using a browser action popup.",
  "permissions": ["tabs", "<all_urls>"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "48": "icons/icon.png"
  }
}
